<?xml version="1.0" encoding="UTF-8"?>

<Context>
	<Resource name="jdbc/DB" auth="Container"
		type="com.mchange.v2.c3p0.ComboPooledDataSource"  
		maxPoolSize="200" minPoolSize="5" initialPoolSize="5" acquireIncrement="3"  
		idleConnectionTestPeriod="60" testConnectionOnCheckin="true"
		user="root" password="admin" 
		factory="org.apache.naming.factory.BeanFactory"
		driverClass="com.mysql.jdbc.Driver"
		jdbcUrl="jdbc:mysql://localhost:3306/demo?useUnicode=true&amp;characterEncoding=utf8" />
</Context>
